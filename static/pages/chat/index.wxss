/* 消息列表 */
.msg_list{
  width: clac(100% - 40rpx);
  height: calc(100% - 190rpx);
  padding: 0 20rpx;
  margin-bottom: 120rpx;
}
.other{
  width:100%;
  min-height:70rpx;
  text-align:left;
  margin-top:20rpx;
}
.msg_text{
  position: relative;
  top: 10rpx;
  max-width: calc(100% - 60px);
  display: inline-block;
  word-break: break-all;

}
.chat_img{
  width: 180rpx;
  height: 240rpx;
  position: absolute;
}
.chat_icon{
  font-size: 0;
  width:20rpx;
  height:20rpx;
}

.msg_text::after{
  content: ' ';
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  background-image: url('data:image/png;base64,');
background-repeat: no-repeat;
  
}

.other text::after{
  left: -60rpx;
}
.me{
  width: 100%;
  min-height: 70rpx;
  text-align: right;
  margin-top: 20rpx;
}

.me text::after{
  right: -60rpx;
}
.me .chat_img{
 right: 20rpx;
}
.other .chat_img{
 left: 20rpx;
}
.other.other_img{
  min-height: 260rpx;
}
.me.me_img{
  min-height: 260rpx;
}
/* 消息框 */
.send_msg{
  width: 100%;
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  padding: 20rpx 40rpx 10rpx;
  background: #fff;
}
.input_box{
  width: calc(100% - 350rpx);
  height:66rpx;
  line-height: 66rpx;
  font-size: 32rpx;
  border: 1px solid #ddd;
  border-radius: 6rpx;
  padding:0 20rpx;
}
.btn{
  width:150rpx;
  line-height:66rpx;
  background: #07C160;
  color: #fff;
  font-size: 32rpx;
}
.btn_plus{
  width:60rpx;
  height:60rpx;
  text-align:center;
  line-height:60rpx;
  font-size:70rpx;
  color:#666;
}

.left_icon{
  border:1px solid #ddd;
  padding:10rpx 20rpx;
  margin-left: 60rpx;
  border-radius:12rpx;
  background:#fff;
}
.right_icon{
  border:1px solid #ddd;
  padding:10rpx 20rpx;
  margin-right: 60rpx;
  border-radius:12rpx;
  background:#fff;
}